                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"mySlotId\": \"YOUR_EVENT_ID\",\n  \"theirSlotId\": \"OTHER_USER_EVENT_ID\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/swap-request",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "swap-request"
                            ]
                        },
                        "description": "Create a swap request by providing your slot ID and the slot ID you want. Both slots must have status SWAPPABLE."
                    },
                    "response": []
