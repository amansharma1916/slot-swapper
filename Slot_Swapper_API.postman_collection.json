                            "raw": "{\n  \"accept\": false\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/swap-response/{{swapRequestId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "swap-response",
                                "{{swapRequestId}}"
                            ]
                        },
                        "description": "Reject a swap request. Both slots revert to SWAPPABLE status."
                    },
                    "response": []
