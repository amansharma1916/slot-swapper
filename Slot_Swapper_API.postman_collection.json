                            "raw": "{\n  \"accept\": true\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/swap-response/{{swapRequestId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "swap-response",
                                "{{swapRequestId}}"
                            ]
                        },
                        "description": "Accept a swap request. Swaps slot ownership atomically using MongoDB transactions."
                    },
                    "response": []
                },
